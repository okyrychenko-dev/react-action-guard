{
  "name": "@okyrychenko-dev/react-action-guard",
  "version": "0.3.0",
  "type": "module",
  "description": "Elegant UI blocking management for React applications with priorities, scopes, and automatic cleanup",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx}\"",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "prepare": "husky",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "keywords": [
    "react",
    "ui-blocking",
    "state-management",
    "zustand",
    "typescript",
    "loading",
    "async-operations"
  ],
  "author": "Olexii Kyrychenko alexey.kirichenko@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/okyrychenko-dev/react-action-guard"
  },
  "bugs": {
    "url": "https://github.com/okyrychenko-dev/react-action-guard/issues"
  },
  "homepage": "https://github.com/okyrychenko-dev/react-action-guard#readme",
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": "^17.0.0 || ^18.0.0",
    "zustand": "^4.5.7"
  },
  "dependencies": {
    "immer": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@storybook/addon-a11y": "^10.0.8",
    "@storybook/addon-docs": "^10.0.8",
    "@storybook/react-vite": "^10.0.8",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^4.0.9",
    "@vitest/ui": "^4.0.9",
    "clsx": "^2.1.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "^10.0.8",
    "happy-dom": "^20.0.10",
    "husky": "^9.1.7",
    "jsdom": "^27.2.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "remark-gfm": "^4.0.1",
    "storybook": "^10.0.8",
    "tsup": "^8.5.1",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^4.0.9",
    "zustand": "^5.0.8"
  }
}
